number_of_cities = int(input())
total_per_city = 0
total_profit = 0
for city in range (1, number_of_cities + 1):
    city_name = input()
    owner_income = float(input())
    owner_expenses = float(input())
    is_special_event = (city % 3 == 0)
    is_rainy_day = (city % 5 == 0)
    if is_rainy_day:
        owner_income *= 0.9
    if is_special_event and not is_rainy_day:
        owner_expenses *= 1.5
    total_per_city = owner_income - owner_expenses
    total_profit += total_per_city
    print(f'In {city_name} Burger Bus earned {total_per_city:.2f} leva.')
print(f'Burger Bus total profit: {total_profit:.2f} leva.')
